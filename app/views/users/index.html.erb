<h2>
  Current Users
  <span class="badge"><%= @users.count %></span>
</h2>

<table class="table table-hover table-striped table-condensed">
  <thead>
    <tr>
      <th>Screen Name</th>
      <th>Email</th>
      <th>Joined on</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.in_time_zone('Eastern Time (US & Canada)').strftime("%B %-d %Y - %I:%M%p EST") %></td>
        <td>
          <%= link_to "Edit User", edit_user_path(user), class: "btn btn-default btn-sm"%>&emsp;
          <%= link_to "Delete User", user_path(user), method: :delete, class: "btn btn-danger btn-sm"%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
