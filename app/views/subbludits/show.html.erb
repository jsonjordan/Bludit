<table class="table table-hover table-striped table-condensed">
  <thead>
    <tr>
      <th>Post Title</th>
      <th>Author</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @sub.messages.each do |mes| %>
      <tr>
        <td><%= mes.title %></td>
        <td><%= mes.user.name ||= mes.user.email %></td>
        <td>
          <%= link_to "Read", message_path(mes), class: "btn btn-default btn-xs" %>
          <% if mes.user == current_user %>&emsp;
            <%= link_to "Edit", edit_message_path(mes.id), class: "btn btn-default btn-xs"%>&emsp;
            <%= link_to "Delete", message_path(mes.id), method: :delete, class: "btn btn-default btn-xs"%>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
