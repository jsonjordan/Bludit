<h2>
  Current Moderators
  <span class="badge"><%= @mods.count %></span>
</h2>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Subbludit</th>
      <th>Mod Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% last_sub = "" %>
    <% @mods.each do |mod| %>
      <tr>
        <td>
          <% if last_sub != mod.subbludit.name %>
            <%= mod.subbludit.name %>
            <% last_sub = mod.subbludit.name %>
          <% end %>
        </td>
        <td><%= mod.user.name %></td>
          <td><%= link_to "Demote Moderator", moderator_path(mod), method: :delete, class: "btn btn-danger btn-sm"%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
